<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- 隐藏标题栏 -->
        <item name="windowNoTitle">true</item>
        <!-- 隐藏状态栏 -->
        <item name="android:windowFullscreen">true</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!-- 摄像头CameraActivity使用 -->
    <style name="Transparent" parent="AppTheme">
        <item name="android:windowIsTranslucent">false</item>
        <item name="android:windowDisablePreview">true</item>
        <item name="android:windowBackground">@color/transparent</item>
        <!--<item name="android:windowIsTranslucent">true</item>-->
        <item name="android:windowAnimationStyle">@android:style/Animation</item>
    </style>

    <style name="btn_pressed_style">
        <item name="android:background">@drawable/shape_btn_pressed</item>
        <item name="android:textColor">@drawable/white_black_text_pressed</item>
        <item name="android:textSize">@dimen/sp_12</item>
        <item name="android:layout_width">@dimen/dp_60</item>
        <item name="android:layout_height">@dimen/dp_25</item>
    </style>

    <style name="btn_selected_style">
        <item name="android:background">@drawable/shape_btn_selected</item>
        <item name="android:textColor">@drawable/white_black_text_selected</item>
        <item name="android:textSize">@dimen/sp_12</item>
        <item name="android:layout_width">@dimen/dp_60</item>
        <item name="android:layout_height">@dimen/dp_30</item>
        <!--<item name="android:layout_width">wrap_content</item>-->
        <!--<item name="android:layout_height">wrap_content</item>-->
    </style>

    <style name="score_tv">
        <item name="android:textSize">@dimen/sp_12</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="draw_tv_pressed">
        <item name="android:textColor">@drawable/white_black_text_pressed</item>
        <item name="android:background">@drawable/shape_btn_pressed</item>
        <item name="android:clickable">true</item>
        <item name="android:drawablePadding">@dimen/dp_2</item>
        <item name="android:layout_margin">@dimen/dp_2</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">@dimen/dp_2</item>
        <item name="android:layout_centerInParent">true</item>
        <!--<item name="android:textSize">@dimen/sp_12</item>-->
        <!--<item name="android:layout_width">@dimen/dp_50</item>-->
        <!--<item name="android:layout_height">@dimen/dp_20</item>-->
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="draw_tv_selected">
        <item name="android:textColor">@drawable/white_black_text_selected</item>
        <item name="android:background">@drawable/shape_btn_selected</item>
        <item name="android:clickable">true</item>
        <item name="android:drawablePadding">@dimen/dp_2</item>
        <item name="android:layout_margin">@dimen/dp_2</item>
        <!--<item name="android:textSize">@dimen/sp_12</item>-->
        <item name="android:gravity">center</item>
        <item name="android:padding">@dimen/dp_2</item>
        <item name="android:layout_centerInParent">true</item>
        <!--<item name="android:layout_width">@dimen/dp_50</item>-->
        <!--<item name="android:layout_height">@dimen/dp_20</item>-->
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    <!--PopupWindow展示和隐藏的动画-->
    <style name="pop_Animation">
        <item name="android:windowEnterAnimation">@anim/popshow_anim</item>
        <item name="android:windowExitAnimation">@anim/pophide_anim</item>
    </style>
    <!--PopupWindow展示和隐藏的动画 展示右往左 隐藏左往右-->
    <style name="pop_lr_animation">
        <item name="android:windowEnterAnimation">@anim/popshow_end_start</item>
        <item name="android:windowExitAnimation">@anim/pophide_start_end</item>
    </style>
    <style name="pop_rl_animation">
        <item name="android:windowEnterAnimation">@anim/popshow_start_end</item>
        <item name="android:windowExitAnimation">@anim/pophide_end_start</item>
    </style>
</resources>
