<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/i_m_d_file_root"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:layout_margin="@dimen/dp_4"
    android:background="@drawable/blue_transparent_s"
    android:gravity="center_vertical"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/i_m_d_file_number"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center"
        tools:text="1" />

    <xlk.paperless.standard.ui.MarqueeTextView
        android:id="@+id/i_m_d_file_name"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="3"
        android:ellipsize="end"
        android:clickable="true"
        android:gravity="center_vertical"
        android:lines="2"
        tools:text="无纸化文件.doc" />

    <TextView
        android:id="@+id/i_m_d_file_size"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center"
        tools:text="20.14 M" />

    <ImageView
        android:id="@+id/i_m_d_file_view"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginStart="@dimen/dp_5"
        android:layout_marginEnd="@dimen/dp_5"
        android:visibility="gone"
        android:gravity="center"
        android:src="@drawable/file_view_icon_pressed" />

    <ImageView
        android:id="@+id/i_m_d_file_download"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginEnd="@dimen/dp_5"
        android:gravity="center"
        android:src="@drawable/file_download_icon_pressed" />
</LinearLayout>