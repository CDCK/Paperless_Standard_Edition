<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:descendantFocusability="blocksDescendants"
    android:gravity="center"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/bind_member"
        android:textColor="@color/btn_normal_tv"
        android:gravity="center"
        android:layout_margin="5dp"
        android:textSize="@dimen/text_size_huge"
        android:textStyle="bold" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/pop_bind_member_rv"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/pop_bind_member_determine"
            android:layout_width="0dp"
            style="@style/btn_pressed_style"
            android:layout_marginStart="5dp"
            android:layout_weight="1"
            android:text="@string/determine" />
        <Button
            android:id="@+id/pop_bind_member_create"
            android:layout_width="0dp"
            style="@style/btn_pressed_style"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="5dp"
            android:layout_weight="1"
            android:text="@string/create" />

        <Button
            android:id="@+id/pop_bind_member_cancel"
            android:layout_width="0dp"
            style="@style/btn_pressed_style"
            android:layout_marginEnd="5dp"
            android:layout_weight="1"
            android:text="@string/cancel" />
    </LinearLayout>
</LinearLayout>