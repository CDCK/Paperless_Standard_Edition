<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/table_line_color"
    android:gravity="center"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/item_score_desc"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginStart="@dimen/dp_1"
        android:layout_marginEnd="@dimen/dp_1"
        android:layout_marginBottom="@dimen/dp_1"
        android:layout_weight="3"
        android:background="@drawable/item_bg_select"
        android:ellipsize="end"
        android:gravity="center"
        android:lines="2"
        android:textColor="@color/tv_color"
        android:textSize="@dimen/sp_10"
        tools:text="评分描述" />

    <TextView
        android:id="@+id/item_score_file"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginEnd="@dimen/dp_1"
        android:layout_marginBottom="@dimen/dp_1"
        android:layout_weight="3"
        android:background="@drawable/item_bg_select"
        android:ellipsize="end"
        android:gravity="center"
        android:lines="2"
        android:textColor="@color/tv_color"
        android:textSize="@dimen/sp_10"
        tools:text="文件" />

    <TextView
        android:id="@+id/item_score_state"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginEnd="@dimen/dp_1"
        android:layout_marginBottom="@dimen/dp_1"
        android:layout_weight="2"
        android:background="@drawable/item_bg_select"
        android:ellipsize="end"
        android:gravity="center"
        android:lines="2"
        android:textColor="@color/tv_color"
        android:textSize="@dimen/sp_10"
        tools:text="状态" />

    <TextView
        android:id="@+id/item_score_people"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginEnd="@dimen/dp_1"
        android:layout_marginBottom="@dimen/dp_1"
        android:layout_weight="2"
        android:background="@drawable/item_bg_select"
        android:ellipsize="end"
        android:gravity="center"
        android:lines="2"
        android:textColor="@color/tv_color"
        android:textSize="@dimen/sp_10"
        tools:text="应到/实评人数" />

    <TextView
        android:id="@+id/item_score_register"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginEnd="@dimen/dp_1"
        android:layout_marginBottom="@dimen/dp_1"
        android:layout_weight="1"
        android:background="@drawable/item_bg_select"
        android:ellipsize="end"
        android:gravity="center"
        android:lines="2"
        android:textColor="@color/tv_color"
        android:textSize="@dimen/sp_10"
        tools:text="记名" />

    <TextView
        android:id="@+id/item_score_1"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginEnd="@dimen/dp_1"
        android:layout_marginBottom="@dimen/dp_1"
        android:layout_weight="2"
        android:background="@drawable/item_bg_select"
        android:ellipsize="end"
        android:gravity="center"
        android:lines="2"
        android:textColor="@color/tv_color"
        android:textSize="@dimen/sp_10"
        tools:text="评分1" />

    <TextView
        android:id="@+id/item_score_2"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginEnd="@dimen/dp_1"
        android:layout_marginBottom="@dimen/dp_1"
        android:layout_weight="2"
        android:background="@drawable/item_bg_select"
        android:ellipsize="end"
        android:gravity="center"
        android:lines="2"
        android:textColor="@color/tv_color"
        android:textSize="@dimen/sp_10"
        tools:text="评分2" />

    <TextView
        android:id="@+id/item_score_3"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginEnd="@dimen/dp_1"
        android:layout_marginBottom="@dimen/dp_1"
        android:layout_weight="2"
        android:background="@drawable/item_bg_select"
        android:ellipsize="end"
        android:gravity="center"
        android:lines="2"
        android:textColor="@color/tv_color"
        android:textSize="@dimen/sp_10"
        tools:text="评分3" />

    <TextView
        android:id="@+id/item_score_4"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginEnd="@dimen/dp_1"
        android:layout_marginBottom="@dimen/dp_1"
        android:layout_weight="2"
        android:background="@drawable/item_bg_select"
        android:ellipsize="end"
        android:gravity="center"
        android:lines="2"
        android:textColor="@color/tv_color"
        android:textSize="@dimen/sp_10"
        tools:text="评分4" />

    <TextView
        android:id="@+id/item_score_total"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginEnd="@dimen/dp_1"
        android:layout_marginBottom="@dimen/dp_1"
        android:layout_weight="1"
        android:background="@drawable/item_bg_select"
        android:ellipsize="end"
        android:gravity="center"
        android:lines="2"
        android:textColor="@color/tv_color"
        android:textSize="@dimen/sp_10"
        tools:text="总分" />

    <TextView
        android:id="@+id/item_score_average"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginEnd="@dimen/dp_1"
        android:layout_marginBottom="@dimen/dp_1"
        android:layout_weight="2"
        android:background="@drawable/item_bg_select"
        android:ellipsize="end"
        android:gravity="center"
        android:lines="2"
        android:textColor="@color/tv_color"
        android:textSize="@dimen/sp_10"
        tools:text="总平均分" />
</LinearLayout>