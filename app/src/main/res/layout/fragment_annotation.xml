<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:padding="5dp">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/f_annotation_member_rv"
        android:layout_width="100dp"
        android:layout_height="match_parent"
        android:layout_margin="8dp"
        android:background="@color/white" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:layout_weight="1"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginStart="10dp"
                android:layout_weight="7"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/f_annotation_documentation"
                    style="@style/btn_pressed_style"
                    android:layout_width="wrap_content"
                    android:layout_marginEnd="5dp"
                    android:text="@string/documentation_data" />

                <Button
                    android:id="@+id/f_annotation_picture"
                    style="@style/btn_pressed_style"
                    android:layout_width="wrap_content"
                    android:layout_marginEnd="5dp"
                    android:text="@string/picture_file" />

                <Button
                    android:id="@+id/f_annotation_video"
                    style="@style/btn_pressed_style"
                    android:layout_width="wrap_content"
                    android:layout_marginEnd="5dp"
                    android:text="@string/video_file" />

                <Button
                    android:id="@+id/f_annotation_other"
                    style="@style/btn_pressed_style"
                    android:layout_width="wrap_content"
                    android:text="@string/other_file" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginEnd="10dp"
                android:layout_weight="3"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/f_annotation_push"
                    style="@style/btn_pressed_style"
                    android:layout_width="wrap_content"
                    android:layout_marginEnd="5dp"
                    android:text="@string/push_file" />

                <Button
                    android:id="@+id/f_annotation_export"
                    style="@style/btn_pressed_style"
                    android:layout_width="wrap_content"
                    android:text="@string/export_file" />
            </LinearLayout>

        </LinearLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/f_annotation_file_rv"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_margin="8dp"
            android:layout_weight="7"
            android:background="@color/white" />
    </LinearLayout>
</LinearLayout>