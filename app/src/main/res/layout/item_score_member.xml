<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/table_line_color"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/item_score_member"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginStart="@dimen/dp_1"
        android:layout_marginEnd="@dimen/dp_1"
        android:layout_marginBottom="@dimen/dp_1"
        android:layout_weight="1"
        android:background="@color/white"
        android:gravity="center"
        android:textSize="@dimen/sp_10"
        tools:text="参会人" />

    <TextView
        android:id="@+id/item_score_option1"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginEnd="@dimen/dp_1"
        android:layout_marginBottom="@dimen/dp_1"
        android:layout_weight="1"
        android:background="@color/white"
        android:gravity="center"
        android:textSize="@dimen/sp_10"
        tools:text="评分一" />

    <TextView
        android:id="@+id/item_score_option2"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginEnd="@dimen/dp_1"
        android:layout_marginBottom="@dimen/dp_1"
        android:layout_weight="1"
        android:background="@color/white"
        android:gravity="center"
        android:textSize="@dimen/sp_10"
        tools:text="评分二" />

    <TextView
        android:id="@+id/item_score_option3"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginEnd="@dimen/dp_1"
        android:layout_marginBottom="@dimen/dp_1"
        android:layout_weight="1"
        android:background="@color/white"
        android:gravity="center"
        android:textSize="@dimen/sp_10"
        tools:text="评分三" />

    <TextView
        android:id="@+id/item_score_option4"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginEnd="@dimen/dp_1"
        android:layout_marginBottom="@dimen/dp_1"
        android:layout_weight="1"
        android:background="@color/white"
        android:gravity="center"
        android:textSize="@dimen/sp_10"
        tools:text="评分四" />

    <TextView
        android:id="@+id/item_score_total"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginEnd="@dimen/dp_1"
        android:layout_marginBottom="@dimen/dp_1"
        android:layout_weight="1"
        android:background="@color/white"
        android:gravity="center"
        android:textSize="@dimen/sp_10"
        tools:text="总分" />

    <TextView
        android:id="@+id/item_score_average"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginEnd="@dimen/dp_1"
        android:layout_marginBottom="@dimen/dp_1"
        android:layout_weight="1"
        android:background="@color/white"
        android:gravity="center"
        android:textSize="@dimen/sp_10"
        tools:text="平均分" />
</LinearLayout>